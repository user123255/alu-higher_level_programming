#!/usr/bin/python3
"""Module that defines the BaseGeometry class for geometry operations."""


class BaseGeometry:
    """A base class for geometry operations."""

    def area(self):
        """
        Raises an Exception to indicate that area()
        is not implemented in this base class.
        """
        raise Exception("area() is not implemented")

    def integer_validator(self, name, value):
        """
        Validates that a parameter is a positive integer.

        Args:
            name (str): The name of the parameter (for error messages).
            value (int): The value to validate.

        Raises:
            TypeError: If value is not an integer.
            ValueError: If value is less than or equal to 0.
        """
        if not isinstance(value, int):
            raise TypeError(f"{name} must be an integer")
        if value <= 0:
            raise ValueError(f"{name} must be greater than 0")
